<%- include('../partials/head') %>

<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body class="bg-gray-100">
  <%- include('../partials/nav') %>

  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">

    <h2 class="text-3xl font-extrabold text-gray-800 mb-2 text-center">
      Here are our registered homes:
    </h2>

    <div class="text-center mb-10">
      <a href="/host/add-home"
         class="bg-red-500 text-white px-6 py-3 rounded-lg text-lg font-medium hover:bg-red-600 transition duration-300 inline-block shadow-md">
        + Add New Home
      </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">

      <% if (registeredHomes && registeredHomes.length > 0) { %>
        <% registeredHomes.forEach(home => { %>

          <div class="bg-white rounded-xl shadow-lg overflow-hidden group relative">

            <!-- Home Image -->
            <a href="/homes/<%= home._id %>" class="block relative">
              <img
                src="<%= (home.photo && home.photo.length) ? home.photo[0] : 'https://news.airbnb.com/wp-content/uploads/sites/4/2022/09/AIRBNB-Yuvraj-Singh_Image-01_PDP.jpg' %>"
                alt="<%= home.houseName %>"
                class="w-full h-52 sm:h-48 object-cover transition-transform duration-300 group-hover:scale-105"
              >

              <div class="absolute right-3 bottom-3 bg-white bg-opacity-90 rounded-full px-3 py-1 flex items-center gap-2 shadow">
                <i class="fas fa-star text-yellow-400"></i>
                <span class="text-sm font-semibold text-gray-800"><%= home.rating || '—' %></span>
              </div>
            </a>

            <div class="p-5">
              <h3 class="text-lg font-bold text-gray-900 mb-1 truncate"><%= home.houseName %></h3>
              <p class="text-sm text-gray-600 mb-3 flex items-center">
                <i class="fas fa-map-marker-alt mr-2 text-red-500"></i><%= home.location %>
              </p>

              <div class="mb-4">
                <span class="text-2xl font-extrabold text-red-600">₹<%= home.price %></span>
                <span class="text-sm text-gray-500"> / night</span>
              </div>

              <div class="flex flex-col gap-2">
                <a href="/homes/<%= home._id %>" class="w-full py-2 px-4 rounded-md bg-red-500 text-white text-center font-medium hover:bg-red-600 transition">
                  View Details
                </a>

                <form action="/favourites" method="POST" class="w-full">
                  <input type="hidden" name="id" value="<%= home._id %>">
                  <button type="submit" class="w-full py-2 px-4 rounded-md border border-red-300 text-red-600 font-medium hover:bg-red-50 transition">
                    <i class="fas fa-heart mr-1"></i>Favourite
                  </button>
                </form>
              </div>

              <div class="mt-4 flex items-center justify-between text-sm text-gray-500">
                <div class="flex items-center gap-2">
                  <i class="fas fa-user"></i>
                  <span><%= home.hostName || home.host || 'Host' %></span>
                </div>
                <div class="flex items-center gap-2">
                  <% if (home.tags && home.tags.length) { %>
                    <% home.tags.slice(0,2).forEach(tag => { %>
                      <span class="bg-gray-100 px-2 py-1 rounded text-xs"><%= tag %></span>
                    <% }) %>
                  <% } %>
                </div>
              </div>
            </div>
          </div>

        <% }) %>
      <% } else { %>

        <div class="col-span-full">
          <p class="text-gray-500 text-center text-lg py-12 border-2 border-dashed border-gray-300 rounded-lg">
            No homes registered yet. Click “+ Add New Home” above to get started!
          </p>
        </div>

      <% } %>
    </div>

  </main>

</body>
</html>
