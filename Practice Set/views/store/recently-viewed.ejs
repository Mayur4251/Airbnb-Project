<%- include('../partials/head') %>
<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body class="bg-gray-100">
  <%- include('../partials/nav') %>
  
  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
    <h1 class="text-3xl font-bold text-red-500 mb-6 text-center">Recently Viewed</h1>

    <% if (homes && homes.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% homes.forEach(home => { %>
          <div class="bg-white rounded-xl shadow-md overflow-hidden border border-gray-200 hover:shadow-lg transition">
            <img
              src="<%= (home.photo && home.photo.length) ? home.photo[0] : 'https://news.airbnb.com/wp-content/uploads/sites/4/2022/09/AIRBNB-Yuvraj-Singh_Image-01_PDP.jpg' %>"
              alt="<%= home.houseName %>"
              class="w-full h-48 object-cover"
            >
            <div class="p-5">
              <h3 class="text-lg font-bold text-gray-900 mb-2"><%= home.houseName %></h3>
              <p class="text-sm text-gray-600 mb-3 flex items-center">
                <i class="fas fa-map-marker-alt mr-2 text-red-500"></i><%= home.location %>
              </p>
              <div class="mb-4">
                <span class="text-xl font-bold text-red-600">â‚¹<%= home.price %></span>
                <span class="text-sm text-gray-500"> / night</span>
              </div>
              <a href="/homes/<%= home._id %>" class="w-full py-2 px-4 rounded-md bg-red-500 text-white text-center font-medium hover:bg-red-600 transition block">
                View Details
              </a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="text-center py-12">
        <i class="fas fa-history text-6xl text-gray-300 mb-4"></i>
        <p class="text-xl text-gray-500 mb-2">No recently viewed homes</p>
        <p class="text-gray-400 mb-6">Start browsing to see your recently viewed homes here!</p>
        <a href="/" class="inline-block bg-red-500 text-white px-6 py-3 rounded-lg hover:bg-red-600 transition">
          Browse Homes
        </a>
      </div>
    <% } %>
  </main>
</body>
</html>

