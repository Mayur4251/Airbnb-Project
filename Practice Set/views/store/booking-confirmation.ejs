<%- include('../partials/head') %>
<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body class="bg-gray-100">
  <%- include('../partials/nav') %>

  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-4xl">
    <div class="text-center mb-8">
      <div class="inline-block p-4 bg-green-100 rounded-full mb-4">
        <i class="fas fa-check-circle text-green-500 text-5xl"></i>
      </div>
      <h1 class="text-4xl font-bold text-gray-900 mb-2">Booking Confirmed!</h1>
      <p class="text-lg text-gray-600">Your booking has been successfully confirmed</p>
    </div>

    <div class="bg-gray-50 rounded-xl p-6 mb-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Booking Details</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="font-semibold text-gray-700 mb-2">Property</h3>
          <p class="text-gray-900 text-lg font-bold"><%= booking.homeId ? booking.homeId.houseName : "Property" %></p>
          <p class="text-gray-600"><i class="fas fa-map-marker-alt mr-2"></i><%= booking.homeId ? booking.homeId.location : "" %></p>
        </div>

        <div>
          <h3 class="font-semibold text-gray-700 mb-2">Booking ID</h3>
          <p class="text-gray-900 font-mono"><%= booking._id %></p>
        </div>

        <div>
          <h3 class="font-semibold text-gray-700 mb-2">Check-in</h3>
          <p class="text-gray-900"><i class="fas fa-calendar-check mr-2 text-green-500"></i><%= new Date(booking.checkInDate).toLocaleDateString() %></p>
        </div>

        <div>
          <h3 class="font-semibold text-gray-700 mb-2">Check-out</h3>
          <p class="text-gray-900"><i class="fas fa-calendar-times mr-2 text-red-500"></i><%= new Date(booking.checkOutDate).toLocaleDateString() %></p>
        </div>

        <div>
          <h3 class="font-semibold text-gray-700 mb-2">Total Price</h3>
          <p class="text-3xl font-bold text-red-600">â‚¹<%= booking.totalPrice %></p>
        </div>

        <div>
          <h3 class="font-semibold text-gray-700 mb-2">Status</h3>
          <span class="inline-block px-4 py-2 bg-green-100 text-green-800 rounded-full font-semibold">
           <%= booking.status ? booking.status.charAt(0).toUpperCase() + booking.status.slice(1) : "Confirmed" %>
          </span>
        </div>
      </div>
    </div>

    <div class="flex gap-4 justify-center">
      <a href="/bookings" class="bg-red-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-red-600 transition">
        <i class="fas fa-list mr-2"></i>View All Bookings
      </a>
      <a href="/" class="bg-gray-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-gray-600 transition">
        <i class="fas fa-home mr-2"></i>Back to Home
      </a>
    </div>
  </main>

</body>
</html>

