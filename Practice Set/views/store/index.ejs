<%- include('../partials/head') %>
<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body class="bg-gray-100">
  <%- include('../partials/nav') %>

  <main class="container mx-auto px-4 py-8 max-w-7xl">
    <h2 class="text-4xl text-red-500 font-bold text-center mb-8">
      Welcome to EliteDwell
    </h2>

    <!-- ðŸ”Ž SEARCH + FILTER SECTION -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-10">
      <form method="GET" action="/" class="space-y-4">

        <!-- Search -->
        <div>
          <label class="block text-sm font-semibold text-gray-700 mb-2">
            <i class="fas fa-search text-red-500 mr-2"></i>Search Homes
          </label>
          <input
            type="text"
            name="search"
            value="<%= search || '' %>"
            placeholder="Search by house name or location..."
            class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:border-red-500 outline-none"
          />
        </div>

        <!-- Filters -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">

          <!-- Min Price -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Min Price</label>
            <input
              type="number"
              name="minPrice"
              value="<%= minPrice || '' %>"
              class="w-full px-4 py-2 border-2 border-gray-300 rounded-lg"
            />
          </div>

          <!-- Max Price -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Max Price</label>
            <input
              type="number"
              name="maxPrice"
              value="<%= maxPrice || '' %>"
              class="w-full px-4 py-2 border-2 border-gray-300 rounded-lg"
            />
          </div>

          <!-- Rating -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Min Rating</label>
            <select
              name="minRating"
              class="w-full px-4 py-2 border-2 border-gray-300 rounded-lg"
            >
              <option value="">Any</option>
              <option value="4.5" <%= minRating == 4.5 ? 'selected' : '' %>>4.5+</option>
              <option value="4" <%= minRating == 4 ? 'selected' : '' %>>4+</option>
              <option value="3" <%= minRating == 3 ? 'selected' : '' %>>3+</option>
            </select>
          </div>

          <!-- Property Type -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Property Type</label>
            <select
              name="propertyType"
              class="w-full px-4 py-2 border-2 border-gray-300 rounded-lg"
            >
              <option value="">All</option>
              <option value="house" <%= propertyType === 'house' ? 'selected' : '' %>>House</option>
              <option value="apartment" <%= propertyType === 'apartment' ? 'selected' : '' %>>Apartment</option>
              <option value="villa" <%= propertyType === 'villa' ? 'selected' : '' %>>Villa</option>
              <option value="studio" <%= propertyType === 'studio' ? 'selected' : '' %>>Studio</option>
            </select>
          </div>
        </div>

        <!-- Buttons -->
        <div class="flex gap-4 pt-4 justify-center">
          <button
            type="submit"
            class="bg-red-500 text-white px-8 py-2 rounded-lg font-semibold hover:bg-red-600 transition"
          >
            <i class="fas fa-filter mr-2"></i>Apply
          </button>

          <a
            href="/"
            class="bg-gray-500 text-white px-8 py-2 rounded-lg font-semibold hover:bg-gray-600 transition"
          >
            <i class="fas fa-times mr-2"></i>Clear
          </a>
        </div>
      </form>
    </div>

    <!-- ðŸ  HOMES GRID -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mb-8">
      <% if (registeredHomes && registeredHomes.length > 0) { %>
        <% registeredHomes.forEach(home => { %>
          <div class="bg-white rounded-xl shadow-lg overflow-hidden group relative hover:shadow-xl transition">

            <a href="/homes/<%= home._id %>" class="block relative">
              <img
                src="<%= (home.photo && home.photo.length) ? home.photo[0] : 'https://news.airbnb.com/wp-content/uploads/sites/4/2022/09/AIRBNB-Yuvraj-Singh_Image-01_PDP.jpg' %>"
                alt="<%= home.houseName %>"
                class="w-full h-52 sm:h-48 object-cover transition-transform duration-300 group-hover:scale-105"
              >

              <div class="absolute right-3 bottom-3 bg-white bg-opacity-90 rounded-full px-3 py-1 flex items-center gap-2 shadow">
                <i class="fas fa-star text-yellow-400"></i>
                <span class="text-sm font-semibold text-gray-800">
                  <%= home.rating ? home.rating.toFixed(1) : 'â€”' %>
                </span>
              </div>
            </a>

            <div class="p-5">
              <h3 class="text-lg font-bold text-gray-900 mb-1 truncate">
                <%= home.houseName %>
              </h3>

              <p class="text-sm text-gray-600 mb-2 flex items-center">
                <i class="fas fa-map-marker-alt mr-2 text-red-500"></i>
                <%= home.location %>
              </p>

              <div class="mb-4">
                <span class="text-2xl font-extrabold text-red-600">â‚¹<%= home.price %></span>
                <span class="text-sm text-gray-500"> / night</span>
              </div>

              <div class="flex flex-col gap-2">
                <a
                  href="/homes/<%= home._id %>"
                  class="w-full py-2 px-4 rounded-md bg-red-500 text-white text-center font-medium hover:bg-red-600 transition"
                >
                  View Details
                </a>

                <a
                  href="/homes/<%= home._id %>/book"
                  class="w-full py-2 px-4 rounded-md bg-green-500 text-white text-center font-medium hover:bg-green-600 transition"
                >
                  <i class="fas fa-calendar-check mr-1"></i>Book Now
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-span-full">
          <p class="text-gray-500 text-center text-lg py-12 border-2 border-dashed border-gray-300 rounded-lg">
            No homes found. Try adding a new home!
          </p>
        </div>
      <% } %>
    </div>
  </main>
</body>
</html>
