<%- include('../partials/head') %>
<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body class="bg-gradient-to-br from-gray-100 to-gray-50 min-h-screen">
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-10 mb-10 px-4">
    <!-- Header -->
    <div class="mb-10">
      <h1 class="text-4xl font-extrabold text-gray-800 mb-2 text-center">Your Listings</h1>
      <p class="text-gray-600 text-center">Manage and edit your properties</p>
    </div>

    <!-- Add Home Button -->
    <div class="text-center mb-8">
      <a href="/host/add-home" class="inline-flex items-center gap-2 bg-red-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-red-600 transition shadow-md align-center">
        <i class="fas fa-plus"></i> Add New Home
      </a>
    </div>

    <!-- Homes Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
      <% if (registeredHomes && registeredHomes.length > 0) { %>
        <% registeredHomes.forEach(home => { %>
          <div class="bg-white rounded-xl shadow-md overflow-hidden group hover:shadow-xl transition-shadow">
            
            <!-- Image -->
            <a href="/homes/<%= home._id %>" class="block relative overflow-hidden">
              <img 
                src="<%= (home.photo && home.photo.length) ? home.photo[0] : 'https://news.airbnb.com/wp-content/uploads/sites/4/2022/09/AIRBNB-Yuvraj-Singh_Image-01_PDP.jpg' %>"
                alt="<%= home.houseName %>"
                class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105"
              >
              
              <!-- Status Badge -->
              <div class="absolute top-3 right-3 bg-green-500 text-white px-2 py-1 rounded-full text-xs font-semibold">
                Listed
              </div>

              <!-- Rating -->
              <div class="absolute right-3 bottom-3 bg-white rounded-full px-3 py-1 flex items-center gap-1 shadow">
                <i class="fas fa-star text-yellow-400 text-sm"></i>
                <span class="text-xs font-semibold text-gray-800"><%= home.rating || 'N/A' %></span>
              </div>
            </a>

            <!-- Content -->
            <div class="p-5">
              <h3 class="text-lg font-bold text-gray-900 mb-1 truncate">
                <%= home.houseName %>
              </h3>

              <p class="text-sm text-gray-600 mb-3 flex items-center">
                <i class="fas fa-map-marker-alt mr-2 text-red-500 text-xs"></i>
                <%= home.location %>
              </p>

              <!-- Price -->
              <div class="mb-4">
                <span class="text-2xl font-extrabold text-red-600">â‚¹<%= home.price %></span>
                <span class="text-sm text-gray-500"> / night</span>
              </div>

              <!-- Action Buttons -->
              <div class="flex flex-col gap-2">
                <a href="/host/edit-home/<%=home._id%>/?editing=true" class="w-full py-2 px-4 rounded-md bg-blue-500 text-white text-center text-sm font-medium hover:bg-blue-600 transition">
                  <i class="fas fa-edit mr-1"></i>Edit
                </a>

                <form action="/host/delete-home/<%= home._id %>" method="POST" class="w-full">
                  <button type="submit" class="w-full py-2 px-4 rounded-md border border-red-300 text-red-600 text-sm font-medium hover:bg-red-50 transition" onclick="return confirm('Are you sure you want to delete this listing?');">
                    <i class="fas fa-trash mr-1"></i>Delete
                  </button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <!-- Empty State -->
        <div class="col-span-full">
          <div class="bg-white rounded-xl shadow-md p-12 text-center">
            <div class="text-6xl text-gray-300 mb-4">
              <i class="fas fa-home"></i>
            </div>
            <p class="text-gray-600 text-lg mb-4">No listings yet</p>
            <p class="text-gray-500 mb-6">Start by adding your first home to begin accepting guests.</p>
            <a href="/host/add-home" class="inline-block px-6 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 font-medium transition">
              <i class="fas fa-plus mr-1"></i>Add Your First Home
            </a>
          </div>
        </div>
      <% } %>
    </div>
  </main>
</body>
</html>
