<% if (errors && errors.length> 0) { %>
  <div class="bg-red-50 border-l-4 border-red-500 text-red-700 px-4 py-4 rounded-md mb-6" role="alert">
    <div class="flex items-start">
      <i class="fas fa-exclamation-circle mt-0.5 mr-3 flex-shrink-0"></i>
      <ul class="list-disc list-inside space-y-1.5 text-sm">
        <% errors.forEach(error=> { %>
          <li>
            <%= error.msg %>
          </li>
          <% }) %>
      </ul>
    </div>
  </div>
  <% } %>