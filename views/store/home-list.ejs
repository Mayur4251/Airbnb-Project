<%- include('partials/head') %>
</head>
<body>
  <%- include('partials/nav') %>

  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-3xl">
    <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
      Here are our registered homes:
    </h2>

    <div class="text-center mb-6">
      <a href="/host/add-home" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 transition duration-300">
        + Add New Home
      </a>
    </div>

    <ul class="space-y-6">
      <% if (registeredHomes && registeredHomes.length > 0) { %>
        <% registeredHomes.forEach(home => { %>
          <li class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300 w-full max-w-sm mx-auto">
            <img src="<%= home.photoUrl || 'https://news.airbnb.com/wp-content/uploads/sites/4/2022/09/AIRBNB-Yuvraj-Singh_Image-01_PDP.jpg' %>"
                 alt="<%= home.houseName %>"
                 class="w-full h-48 object-cover">
            <div class="p-4">
              <h3 class="text-xl font-semibold text-gray-800 mb-2">
                <%= home.houseName %>
              </h3>
              <p class="text-gray-600 mb-2">
                <i class="fas fa-map-marker-alt mr-2"></i>
                <%= home.location %>
              </p>
              <div class="flex justify-between items-center mb-2">
                <span class="text-lg font-bold text-red-500">
                  â‚¹<%= home.price %>/ night
                </span>
                <div class="flex items-center text-yellow-500">
                  <i class="fas fa-star mr-1"></i>
                  <span class="text-gray-700"><%= home.rating %></span>
                </div>
              </div>
              <button class="bg-green-300 p-2">Book</button>
            </div>
          </li>
        <% }) %>
      <% } else { %>
        <p class="text-gray-500 text-center">No homes registered yet.</p>
      <% } %>
    </ul>
  </main>
</body>
</html>
